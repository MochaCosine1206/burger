
<div class="container">
<div class="row text-center">
  <div class="col-sm">
<h1>Eat Da Burger!!</h1>
{{!-- <img src="/assets/img/Hamburger.svg"> --}}
</div>
</div>

<div class="row text-center">
  <div class="col-sm">
{{!-- <h2>Burgers that have not been devoured!</h2> --}}

<ul class="list-group">
  {{#each burgers}}
  {{#unless devoured}}
  {{> burgers/burger-block devour=true}}
  {{/unless}}
  {{/each}}
</ul>
</div>
<div class="col-sm">
{{!-- <h2>Burgers that have been devoured!</h2> --}}

<ul>
  {{#each burgers}}
  {{#if devoured}}
  {{> burgers/burger-block devour=false}}
  {{/if}}
  {{/each}}
</ul>
</div>

</div>

<div class="row text-center">
<div class="col-sm">
<h2>Add a Burger!</h2>

<form class="create-form">

<div class="form-group">
  <label for="bg">Burger Name:</label>
  <input type="text" id="bg" name="burger_name">
</div>

{{!-- <div class="form-group">
  <label for="devo">Devoured?</label><br>
  <input type="radio" name="devoured" value="1" checked> Devoured! <br>
  <input type="radio" name="devoured" value="0"> Not Devoured
</div> --}}

<button type="submit">Add Burger</button>
</form>
</div>
</div>
</div>

<script type="text/javascript">

$(function() {
  $(".change-devoured").on("click", function(event) {
    var id = $(this).data("id");
    var newDevour = $(this).data("newdevour");

    var newDevourState = {
      devoured : newDevour
    };

    $.ajax("/api/burgers/" + id, {
      type: "PUT",
      data: newDevourState
    }).then(
      function() {
        console.log("changed devour to", newDevour);
        location.reload();
      }
    );
  });
  $(".create-form").on("submit", function(event){
    event.preventDefault();

    var newBurger = {
      burger_name: $("#bg").val().trim(),
      devoured: 0
    };

    $.ajax("/api/burgers", {
      type: "POST",
      data: newBurger
    }).then(
      function() {
        console.log("created new Burger");

        location.reload();
      }
    );
  });
});

</script>